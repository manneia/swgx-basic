<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!--日志文件主目录：这里${user.home}为当前服务器用户主目录-->
    <property name="LOG_HOME" value="log-gxh"/>
    <property name="APP_NAME" value="basic"/>
    <property name="LOG_FILE" value="${LOG_HOME}/${APP_NAME}.log"/>
    <property name="ROLLING_FILE_NAME_PATTERN" value="${LOG_HOME}/$${date:yyyy-MM}/${APP_NAME}.%d{yyyy-MM-dd}.%i.gz"/>
    <property name="LOG_FILE_MAX_HISTORY" value="60"/>
    <property name="LOG_FILE_MAX_SIZE" value="50MB"/>


    <!--默认配置-->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!--配置控制台(CONSOLE) - 彩色输出-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{yyyy-MM-dd HH:mm:ss}) %highlight([%thread]) %cyan(%-5level) %yellow(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>
    <!--配置文件(FILE)-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径 -->
        <file>${LOG_FILE}</file>

        <!-- 追加模式（默认就是true） -->
        <append>true</append>

        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>LOG_FILE.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <!--root节点 全局日志级别，用来指定最基础的日志输出级别-->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="cn.shiwen.gxhfw.mapper" level="DEBUG"/>

</configuration>